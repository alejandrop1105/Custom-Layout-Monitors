<Window x:Class="CustomLayoutMonitors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomLayoutMonitors"
        xmlns:vm="clr-namespace:CustomLayoutMonitors.ViewModels"
        xmlns:converters="clr-namespace:CustomLayoutMonitors.Converters"
        xmlns:models="clr-namespace:CustomLayoutMonitors.Models"
        xmlns:controls="clr-namespace:CustomLayoutMonitors.Controls"
        mc:Ignorable="d"
        Title="Monitor Layout Manager" Height="400" Width="900"
        MinHeight="500" MinWidth="900"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                                     From="20" To="0" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Window.RenderTransform>
        <TranslateTransform Y="0"/>
    </Window.RenderTransform>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <!-- Converters -->
        <converters:ProfileToVisualItemsConverter x:Key="ProfileToVisualItemsConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:OrientationToImageConverter x:Key="OrientationToImageConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Color Palette -->
        <Color x:Key="DarkBackground">#0a0a1a</Color>
        <Color x:Key="CardBackground">#CC1a1a2e</Color>
        <Color x:Key="CardBackgroundHover">#252540</Color>
        <Color x:Key="PanelBackground">#16162a</Color>
        <Color x:Key="PrimaryPurple">#021573</Color>
        <Color x:Key="LightPurple">#0332A6</Color>
        <Color x:Key="DangerRed">#DC2626</Color>
        <Color x:Key="TextWhite">#FFFFFF</Color>
        <Color x:Key="TextGray">#A3A3A3</Color>
        
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
        <SolidColorBrush x:Key="CardBackgroundHoverBrush" Color="{StaticResource CardBackgroundHover}"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackground}"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryPurple}"/>
        <SolidColorBrush x:Key="LightPurpleBrush" Color="{StaticResource LightPurple}"/>
        <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerRed}"/>
        <SolidColorBrush x:Key="TextWhiteBrush" Color="{StaticResource TextWhite}"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="{StaticResource TextGray}"/>

        <!-- Purple Button Style -->
        <Style x:Key="PurpleButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource LightPurpleBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Button Style -->
        <Style x:Key="CardButton" TargetType="Button">
            <Setter Property="Background" Value="#2a2a4a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Arrow Style -->
        <Style x:Key="NavArrow" TargetType="Button">
            <Setter Property="Background" Value="#4040FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="bg" Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Fill" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Text Input Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2a2a4a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a5a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Floating Action Button Style with Animation -->
        <Style x:Key="AddProfileFAB" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LightPurpleBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Ellipse x:Name="circle" Fill="{TemplateBinding Background}">
                                <Ellipse.Effect>
                                    <DropShadowEffect x:Name="shadow" Color="{StaticResource PrimaryPurple}" 
                                                    BlurRadius="15" 
                                                    ShadowDepth="0" 
                                                    Opacity="0.5"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <Path x:Name="icon"
                                  Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                  Fill="White"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform x:Name="iconRotate" Angle="0"/>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="iconRotate" 
                                                           Storyboard.TargetProperty="Angle" 
                                                           To="90" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="circle" 
                                                          Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)" 
                                                          To="#9333EA" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="shadow" 
                                                           Storyboard.TargetProperty="BlurRadius" 
                                                           To="25" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="shadow" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="0.8" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="iconRotate" 
                                                           Storyboard.TargetProperty="Angle" 
                                                           To="0" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="circle" 
                                                          Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)" 
                                                          To="{StaticResource LightPurple}" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="shadow" 
                                                           Storyboard.TargetProperty="BlurRadius" 
                                                           To="15" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="shadow" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="0.5" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" ClipToBounds="True">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/bg_gradient.png" Stretch="UniformToFill"/>
        </Border.Background>
    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header (Custom Title Bar) -->
            <Grid Grid.Row="0" Background="Transparent" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/> <!-- Centered Title -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Title (Centered) -->
                <TextBlock Grid.Column="1" 
                           Text="Monitor Layout Manager" 
                           FontSize="18" 
                           FontWeight="Light" 
                           FontFamily="Segoe UI"
                           Foreground="White"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <!-- Minimize Button Removed (User preference / Tray behavior) -->

                    <!-- Close Button -->
                    <Button Click="CloseApp_Click"
                            Width="30" Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                         <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="Transparent" CornerRadius="15">
                                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                          Fill="#A3A3A3"
                                          Width="12" Height="12"
                                          Stretch="Uniform"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#33DC2626"/>
                                        <Setter Property="Foreground" Value="White"/> <!-- Not used by Path Fill directly but good practice -->
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                         </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Carousel Section (Scroll with mouse wheel, no navigation buttons) -->
            <Grid Grid.Row="1" VerticalAlignment="Center" Margin="0,-40,0,0">
                <!-- Profile Cards -->
                <ScrollViewer x:Name="CarouselScroll"
                              HorizontalScrollBarVisibility="Hidden" 
                              VerticalScrollBarVisibility="Disabled"
                              PanningMode="HorizontalOnly"
                              HorizontalContentAlignment="Center"
                              Loaded="CarouselScroll_Loaded"
                              ScrollChanged="CarouselScroll_ScrollChanged"
                              SizeChanged="CarouselScroll_SizeChanged"
                              PreviewMouseWheel="CarouselScroll_PreviewMouseWheel">
                    <ItemsControl ItemsSource="{Binding Profiles}" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="CardBorder"
                                        CornerRadius="16" 
                                        Margin="10"
                                        Width="200"
                                        Height="220"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.EditProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                     <!-- Handled in DataTemplate -->
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#9333EA" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                                To="#7F5AF0" Duration="0:0:0.3"/>
                                                                <ColorAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Color)"
                                                                                To="#C084FC" Duration="0:0:0.3"/>
                                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                                                                 To="0.6" Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                                To="Transparent" Duration="0:0:0.3"/>
                                                                <ColorAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Color)"
                                                                                To="Black" Duration="0:0:0.3"/>
                                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                                                                 To="0.3" Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                                    </Border.Effect>
                                    <Grid>
                                        <!-- Monitor Preview -->
                                        <StackPanel VerticalAlignment="Top" Margin="15,20,15,0">
                                            <!-- Dynamic Monitor Images -->
                                            <Viewbox Height="100" HorizontalAlignment="Center" Stretch="Uniform">
                                                <Grid Width="300" Height="120">
                                                    <!-- Backlight Glow (Softer & Diffused) -->
                                                    <Border Background="{StaticResource LightPurpleBrush}" CornerRadius="60" Opacity="0.25"
                                                            Width="240" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Border.Effect>
                                                            <BlurEffect Radius="60"/>
                                                        </Border.Effect>
                                                    </Border>
                                                    
                                                    <!-- Monitors -->
                                                    <ItemsControl ItemsSource="{Binding Converter={StaticResource ProfileToVisualItemsConverter}}"
                                                                  Width="300" Height="120">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <Canvas Width="300" Height="120"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemContainerStyle>
                                                            <Style TargetType="ContentPresenter">
                                                                <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                                                <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                                            </Style>
                                                        </ItemsControl.ItemContainerStyle>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid Width="{Binding Width}" Height="{Binding Height}">
                                                                    <Image Source="{Binding Orientation, Converter={StaticResource OrientationToImageConverter}}"
                                                                           Stretch="Uniform"
                                                                           VerticalAlignment="Bottom">
                                                                        <Image.RenderTransform>
                                                                            <SkewTransform AngleY="{Binding TiltAngle}"/>
                                                                        </Image.RenderTransform>
                                                                        <Image.RenderTransformOrigin>
                                                                            <Point X="0.5" Y="0.5"/>
                                                                        </Image.RenderTransformOrigin>
                                                                    </Image>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                            </Viewbox>

                                            <!-- Profile Name -->
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="14" 
                                                       FontWeight="Medium" 
                                                       Foreground="White" 
                                                       TextAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,12,0,0"/>
                                        </StackPanel>

                                        <!-- Buttons (Show on hover) -->
                                        <StackPanel x:Name="ActionButtons"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    Margin="0,0,0,20"
                                                    Opacity="0">
                                            
                                            <!-- Activar Button (Centered, Rounded) - Hidden when profile is active -->
                                            <Button Content="Activar" 
                                                    Style="{StaticResource CardButton}"
                                                    Width="100"
                                                    Height="36"
                                                    Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                                    Command="{Binding DataContext.ApplyCommand, 
                                                             RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="18">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            
                                            <!-- "Activo" Label - Shown when profile is active -->
                                            <TextBlock Text="✓ Activo" 
                                                       Foreground="#7F5AF0"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"
                                                       Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>

                                        <!-- Top Actions Stack (Edit + Delete) -->
                                        <StackPanel x:Name="TopActions"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Margin="8"
                                                    Opacity="0">
                                            
                                            <!-- Delete Button -->
                                            <Button Width="24" Height="24"
                                                    ToolTip="Eliminar"
                                                    Command="{Binding DataContext.DeleteCommand, 
                                                             RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="Transparent" CornerRadius="12">
                                                            <TextBlock Text="✕" FontSize="12" Foreground="#DC2626" 
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#33DC2626"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <Trigger SourceName="CardBorder" Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="ActionButtons" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetName="TopActions" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                                    <ColorAnimation Storyboard.TargetName="CardBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                  To="#2A2A40" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="ActionButtons" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetName="TopActions" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                                    <ColorAnimation Storyboard.TargetName="CardBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                  To="#CC1a1a2e" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>


            <!-- Empty State -->
            <StackPanel Grid.Row="1" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Visibility="{Binding Profiles.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <!-- Empty State Icon Removed -->
                <TextBlock Text="No tienes ningún perfil guardado" 
                           FontSize="24" 
                           FontWeight="Light"
                           FontFamily="Segoe Script"
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Por favor hace click en el icono de +" 
                           FontSize="18" 
                           FontFamily="Segoe Script"
                           Foreground="White" 
                           Opacity="0.8"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Floating Action Button (CENTERED) -->
        <Button x:Name="BtnAddProfile"
                Grid.Row="1"
                Width="48" Height="48"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,30"
                Style="{StaticResource AddProfileFAB}"
                Command="{Binding OpenPanelCommand}">
            <Button.Effect>
                <DropShadowEffect Color="#9333EA" BlurRadius="10" ShadowDepth="4" Opacity="0.4"/>
            </Button.Effect>
        </Button>

        <!-- Side Panel Overlay -->
        <Grid x:Name="PanelOverlay" 
              Background="#80000000"
              MouseLeftButtonDown="ClosePanel_Click"
              Opacity="0"
              IsHitTestVisible="False">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPanelOpen}" Value="True">
                            <Setter Property="IsHitTestVisible" Value="True"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
        </Grid>

        <!-- Side Panel -->
        <Border x:Name="SidePanel"
                Width="380"
                HorizontalAlignment="Right"
                Background="{StaticResource PanelBackgroundBrush}"
                CornerRadius="20,0,0,20">
            <Border.RenderTransform>
                <TranslateTransform X="400"/>
            </Border.RenderTransform>
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPanelOpen}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                         To="0" Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                         To="400" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="-5" Opacity="0.5" Direction="180"/>
            </Border.Effect>
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="{Binding PanelTitle}" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <Button HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding ClosePanelCommand}">
                        <TextBlock Text="✕" FontSize="18" Foreground="{StaticResource TextGrayBrush}"/>
                    </Button>
                </Grid>

                <!-- Monitor Preview Area -->
                <Border Grid.Row="1" 
                        Background="#0d0d1a" 
                        CornerRadius="12"
                        Margin="0,0,0,20">
                    <Grid>
                        <!-- Large Monitor Preview -->
                        <!-- Large Monitor Preview -->
                        <Grid>
                             <!-- Backlight Glow (Softer & Diffused) -->
                            <Border Background="{StaticResource LightPurpleBrush}" CornerRadius="80" Opacity="0.25"
                                    Width="260" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border.Effect>
                                    <BlurEffect Radius="60"/>
                                </Border.Effect>
                            </Border>

                            <ItemsControl ItemsSource="{Binding PanelPreviewItems}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas Width="300" Height="180"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Width="{Binding Width}" Height="{Binding Height}">
                                            <Image Source="{Binding Orientation, Converter={StaticResource OrientationToImageConverter}}"
                                                   Stretch="Uniform"
                                                   VerticalAlignment="Bottom">
                                                <Image.RenderTransform>
                                                    <SkewTransform AngleY="{Binding TiltAngle}"/>
                                                </Image.RenderTransform>
                                                <Image.RenderTransformOrigin>
                                                    <Point X="0.5" Y="0.5"/>
                                                </Image.RenderTransformOrigin>
                                            </Image>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Profile Name Input -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <TextBox Text="{Binding PanelProfileName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"/>
                    <TextBlock Text="Nombre del Perfil" 
                               Foreground="#666"
                               IsHitTestVisible="False"
                               Margin="14,12,0,0"
                               Visibility="{Binding PanelProfileName, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=text}"/>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="3">
                    <Button Content="Guardar" 
                            Style="{StaticResource PurpleButton}"
                            HorizontalAlignment="Stretch"
                            Command="{Binding SavePanelCommand}"/>
                    <Button Content="Cancelar" 
                            Style="{x:Null}"
                            Background="Transparent"
                            Foreground="{StaticResource TextGrayBrush}"
                            Padding="0,15"
                            FontSize="14"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            Command="{Binding ClosePanelCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        </Grid>
    </Border>
</Window>
